<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_card_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white2gray_sel"
    android:orientation="vertical" >

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/pic"
        android:layout_width="170dp"
        android:layout_height="153dp"
        android:layout_marginLeft="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/f1" />

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4.70"
        android:padding="16dp" >

        <LinearLayout 
            android:layout_height="180dp" 
            android:layout_width="100dp"
             android:orientation="vertical">
          
            
            <TextView
                android:id="@+id/tv_name"
                style="@style/TextViewSubhead"
                android:text="甜椒炒豆干 
                " />

            <TextView
                android:id="@+id/tv_desc"
                style="@style/TextViewCaption"
                android:layout_height="81dp"
                android:paddingTop="30dp"
                android:text=" 这道菜既有植物蛋白，又有丰富的维生素和微量元素，还富含纤维素，绝对的 健康菜！"
                android:textColor="@color/txt_gray" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>

  
<LinearLayout 
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:orientation="horizontal">
    
        <TextView
        android:id="@+id/tv_price"
        style="@style/TextViewBody"
        android:layout_width="match_parent"
        android:padding="12dp"
        android:text="5元 " />
    
    <TextView
        android:id="@+id/tv_addr"
        style="@style/TextViewBody"
        android:layout_width="match_parent"
        android:padding="12dp"
        android:text="二餐厅    二楼    二窗口 " />

    </LinearLayout>
   <include layout="@layout/pinjia" />
</LinearLayout>